<script>
$(function() {
	var $hotspots = $(".hotspots .hotspot-btn");
	$('.hotspots .close').click(function (e) {
		e.preventDefault();
		$hotspots.removeClass('active');
		$('.hotspotcontents .multiteaser').hide();
		$('html,body').animate({
              scrollTop: $('.hotspotholder').offset().top
        }, 200, function() {});
	});
	$hotspots.click(function (e) {
		e.preventDefault();
		$hotspots.removeClass('active');
		$(this).addClass('active');
		$('.hotspotcontents .multiteaser').hide();
      	var hsid = $(this).data('hsid');
		$('#c' + hsid).fadeIn();
		$('.str-slick-multiteaser .slick-slider').slick("refresh");
		$('html,body').animate({
              scrollTop: $('.hotspotholder').offset().top
        }, 200, function() {});
	});
})
</script>
<script>
	(function ($) {
var margin = 0;
var extra_margin_right = 0;
$.fn.draggableTouch = function (action) {
	if (!("ontouchstart" in document.documentElement)) {
		return this.draggableMouse(action);
	}
	if (action == "disable") {
		this.unbind("touchstart.draggableTouch");
		this.unbind("touchmove.draggableTouch");
		this.unbind("touchend.draggableTouch");
		this.unbind("touchcancel.draggableTouch");
		this.trigger("dragdisabled");
		return this;
	}
	this.each(function () {
		var element = $(this);
		var offset = null;
		var draggingTouchId = null;
		var end = function (e) {
			var orig = e.originalEvent;
			for (var i = 0; i < orig.changedTouches.length; i++) {
				var touch = orig.changedTouches[i];
				if (touch.identifier != draggingTouchId) {
					continue;
				}
				element.trigger("dragend", {
					top: orig.changedTouches[0].pageY - offset.y,
					left: orig.changedTouches[0].pageX - offset.x
				});
				draggingTouchId = null;
			}
		};
		element.bind("touchstart.draggableTouch", function (e) {
			var orig = e.originalEvent;
			if (draggingTouchId) {
				return;
			} else {
				draggingTouchId = orig.changedTouches[0].identifier;
			}
			var pos = $(this).position();
			offset = {
				x: orig.changedTouches[0].pageX - pos.left,
				y: orig.changedTouches[0].pageY - pos.top
			};
			element.trigger("dragstart", pos);
		});
		element.bind("touchmove.draggableTouch", function (e) {
			e.preventDefault();
			var orig = e.originalEvent;
			for (var i = 0; i < orig.changedTouches.length; i++) {
				var touch = orig.changedTouches[i];
				if (touch.identifier != draggingTouchId) {
					continue;
				}
				setCss(element, touch.pageY - offset.y, touch.pageX - offset.x);
			}
		});
		element.bind("touchend.draggableTouch touchcancel.draggableTouch", end);
	});
	return this;
};
/**
 * Draggable fallback for when touch is not available
 */
$.fn.draggableMouse = function (action) {
	// check if we shall make it not draggable
	if (action == "disable") {
		this.unbind("mousedown.draggableTouch");
		this.unbind("mouseup.draggableTouch");
		$(document).unbind("mousemove.draggableTouch");
		this.trigger("dragdisabled");
		return this;
	}
	this.each(function () {
		var element = $(this);
		var offset = null;
		var move = function (e) {
			element.trigger("dragging", e.pageX - offset.x);
			setCss(element, e.pageY - offset.y, e.pageX - offset.x);
		};
		var up = function (e) {
			element.unbind("mouseup.draggableTouch", up);
			$(document).unbind("mousemove.draggableTouch", move);
			element.trigger("dragend", {
				top: e.pageY - offset.y,
				left: e.pageX - offset.x
			});
		};
		element.bind("mousedown.draggableTouch", function (e) {
			var pos = element.position();
			offset = {
				x: e.pageX - pos.left,
				y: e.pageY - pos.top
			};
			$(document).bind("mousemove.draggableTouch", move);
			element.bind("mouseup.draggableTouch", up);
			element.trigger("dragstart", pos);
		});
	});
	return this;
};
function setCss(element, top, left) {
	// bigger then window
	if (element.width() + extra_margin_right > window.innerWidth) {
		if (left > margin) {
			left = margin;
		} else if (left + element.width() + extra_margin_right < window.innerWidth) {
			left = window.innerWidth - element.width() - extra_margin_right;
		}
		o = (left) * getHS_Ratio() * -1;
		console.log('Image: ' + left, 'Dragger: ' + o);
		$('.hotspots .dragger').css('left', o);
	} else {
		if (left < margin) {
            left = margin;
        } else if (left + element.width() + extra_margin_right > element.parent().width()) {
            left = element.parent().width() - element.width();
        }
		o = left / getHS_Ratio2() * -1;
		// console.log('Dragger: ' + left, 'Dragger: ' + o);
		// $('.hotspot-image').css('left', o);
		$('.hotspot-stage').scrollLeft(o*-1);
		// console.log($('.hotspot-stage').scrollLeft());
	}
	element.css({
		top: 0,
		left: left,
	});
}
})(jQuery);
</script>
<script>
window.getHS_Ratio = function (){
		return ($('.hotspot-dragger').width() - $('.hotspots .dragger').width()) / $('.hotspot-image').width();
	}
	window.getHS_Ratio2 = function (){
		return ($('.hotspot-dragger').width() - $('.hotspots .dragger').width()) / ($('.hotspot-image').width()-window.innerWidth);
	}
	// $('.hotspot-image').draggableTouch()
	// 	.on("dragstart", function(event, pos) {
	// 		console.log("drag started on:", this, "at position:", pos);
	// 	})
	// 	// .on("dragging", function(event, pos) {
	// 	// 	console.log("dragging:", "at x:", pos);
	// 	// })
	// 	.on("dragend", function(event, pos) {
	// 		console.log("drag ended on:", this, "at position:", pos);
	// 	});
	$('.hotspots .dragger').draggableTouch();
		// .on("dragging", function(event, pos) {
		// 	console.log("dragging:", "at x:", pos);
		// });
</script>
<script>
$(function() {
	// $('.hotspot-stage').fadeIn();
	$('.hotspot-stage').fadeTo(300,1);
	// console.log($('.hotspot-image').width() - window.innerWidth);
	if ($('.hotspot-stage').hasClass('init-center')) {
		$('.hotspot-stage').scrollLeft(($('.hotspot-image').width() - window.innerWidth) / 2);
	} else if ($('.hotspot-stage').hasClass('init-right')) {
		$('.hotspot-stage').scrollLeft($('.hotspot-image').width() - window.innerWidth);
	}
	// console.log($('.hotspot-image').scrollLeft());
	$('.hotspot-stage').on('scroll', function( e ) {
		console.log($(this).scrollLeft());
		// left = window.innerWidth - $(this).width();
		left = $(this).scrollLeft()
		o = (left) * getHS_Ratio2() ;
		// console.log('scroll stage: ' + left, 'Dragger: ' + o);
		$('.hotspots .dragger').css('left', o);
	})
});
/**
 * @fileoverview dragscroll - scroll area by dragging
 * @version 0.0.8
 *
 * @license MIT, see http://github.com/asvd/dragscroll
